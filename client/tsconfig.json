{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "Shared/*": [
        "src/Shared/*"
      ]
    },
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}